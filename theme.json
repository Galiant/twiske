{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "72rem",
      "wideSize": "72rem"
    },
    "color": {
      "palette": [
        {
          "slug": "twiske-black",
          "color": "#050505",
          "name": "Twiske Black"
        },
        {
          "slug": "twiske-yellow",
          "color": "#ffce00",
          "name": "Twiske Yellow"
        },
        {
          "slug": "twiske-grey",
          "color": "#333333",
          "name": "Twiske Gray"
        },
        {
          "slug": "twiske-charcoal",
          "color": "#5a5a5a",
          "name": "Twiske Charcoal"
        },
        {
          "slug": "twiske-white",
          "color": "#fefefe",
          "name": "Twiske White"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "inter",
          "name": "Body - Inter",
          "fontFace": [
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "src": ["file:./assets/fonts/Inter/Inter-Regular.ttf"]
            },
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "700",
              "fontStyle": "bold",
              "src": ["file:./assets/fonts/Inter/Inter-Bold.ttf"]
            }
          ]
        },
        {
          "fontFamily": "'Chivo', sans-serif",
          "slug": "chivo",
          "name": "Heading - Chivo",
          "fontFace": [
            {
              "fontFamily": "'Chivo', sans-serif",
              "fontWeight": "700",
              "fontStyle": "bold",
              "src": ["file:./assets/fonts/Chivo/Chivo-Bold.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.64rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "0.8rem",
          "name": "Medium"
        },
        {
          "slug": "regular",
          "size": "1rem",
          "name": "Regular"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "extra-large",
          "size": "1.5rem",
          "name": "ExtraLarge"
        }
      ]
    },
    "custom": {
      "typography": {
        "font-size": {
          "heading-1": "2.25rem",
          "heading-2": "1.875rem",
          "heading-3": "1.5rem",
          "heading-4": "1.25rem",
          "heading-5": "1.125rem",
          "heading-6": "1rem"
        }
      },
      "lineHeight": {
        "tiny": 1.15,
        "small": 1.3,
        "medium": 1.5,
        "large": 1.75
      }
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--twiske-white)",
      "text": "var(--wp--preset--color--twiske-black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "var(--wp--custom--line-height--large)",
      "fontSize": "1 rem"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--chivo)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--chivo)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-2)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--chivo)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-3)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--chivo)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-4)"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--chivo)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-5)"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--chivo)",
          "fontWeight": "700",
          "lineHeight": "var(--wp--custom--line-height--small)",
          "fontSize": "var(--wp--custom--typography--font-size--heading-6)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "color": "currentColor",
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--twiske-white)",
          "text": "var(--wp--preset--color--twiske-black)"
        },
        "spacing": {
          "padding": {
            "top": "0.7rem",
            "right": "1.6rem",
            "bottom": "0.7rem",
            "left": "1.6rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--regular)",
          "fontWeight": "600",
          "lineHeight": "var(--wp--custom--line-height--tiny)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ],
  "customTemplates": {},
  "patterns": []
}
